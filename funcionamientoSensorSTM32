/* USER CODE BEGIN PTD */

/* USER CODE END PTD */

/* Private define ------------------------------------------------------------*/
/* USER CODE BEGIN PD */
#define BUTTON_DEBOUNCE 500
/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;

UART_HandleTypeDef huart4;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
extern uint16_t fondo[];//PANTALLA

uint8_t rxBuffer[50];  // Buffer para recibir temperatura del ESP32
uint8_t comando[] = "1";  // Comando a enviar al ESP32
char temperatura[50] = {0};  // Almacena la temperatura recibida
volatile uint8_t buttonPressed = 0;  // Bandera de botón (0=ninguno, 1=UART, 2=SD)
uint32_t lastButtonTime = 0;  // Control de antirrebote

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI1_Init(void);
static void MX_UART4_Init(void);
static void MX_USART2_UART_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

// Función para solicitar temperatura al ESP32 y recibirla
void infoSensor(void) {
    // Limpiar buffer
    memset(rxBuffer, 0, sizeof(rxBuffer));

    // Mensaje de inicio en serial
    uint8_t msg_start[] = "\r\n[STM32] Solicitando temperatura al ESP32...\r\n";
    HAL_UART_Transmit(&huart2, msg_start, strlen((char*)msg_start), 1000);

    // Enviar comando "1" al ESP32
    HAL_UART_Transmit(&huart4, comando, strlen((char*)comando), 100);

    HAL_Delay(200);  // Esperar a que ESP32 procese y envíe la respuesta

    // Recibir datos del ESP32 (máximo 30 bytes, timeout 2 segundos)
    HAL_StatusTypeDef status = HAL_UART_Receive(&huart4, rxBuffer, 30, 2000);

    if (status == HAL_OK) {
        // Temperatura recibida exitosamente
        uint8_t msg1[] = "[STM32] Temperatura registrada: ";
        HAL_UART_Transmit(&huart2, msg1, strlen((char*)msg1), 1000);
        HAL_UART_Transmit(&huart2, rxBuffer, strlen((char*)rxBuffer), 1000);

        uint8_t msg2[] = "\r\n[STM32] Presione boton 2 para guardar en SD\r\n";
        HAL_UART_Transmit(&huart2, msg2, strlen((char*)msg2), 1000);

        // Guardar la temperatura para usar después
        strcpy(temperatura, (char*)rxBuffer);
    } else {
        // Error al recibir
        uint8_t msg_error[] = "\r\n[ERROR] No se recibio respuesta del ESP32 (Timeout)\r\n";
        HAL_UART_Transmit(&huart2, msg_error, strlen((char*)msg_error), 1000);
    }
}

// Función para guardar en SD
void guardarSD(void) {
    uint8_t msg_saved[] = "[STM32] Temperatura guardada en SD: ";
    HAL_UART_Transmit(&huart2, msg_saved, strlen((char*)msg_saved), 1000);
    HAL_UART_Transmit(&huart2, (uint8_t*)temperatura, strlen(temperatura), 1000);
    uint8_t msg_nl[] = "\r\n";
    HAL_UART_Transmit(&huart2, msg_nl, strlen((char*)msg_nl), 1000);
}

/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_UART4_Init();
  MX_USART2_UART_Init();
  /* USER CODE BEGIN 2 */

    // Inicializar pantalla LCD
    LCD_Init();
    LCD_Clear(0x00);

    // Dibujar elementos en la pantalla
    FillRect(50, 60, 20, 20, 0xF800);
    FillRect(70, 60, 20, 20, 0x07E0);
    FillRect(90, 60, 20, 20, 0x001F);

    LCD_Bitmap(100, 100, 60, 60, MarioBE);
    LCD_Bitmap(0, 0, 320, 240, fondo);
    LCD_BitmapTransparent(50, 60, 32, 32, megaman, 0x03ba);

    LCD_Print("Sistema Listo", 20, 150, 2, 0x001F, 0x4c9d);

    for (int x = 0; x < 319; x++) {
        LCD_Bitmap(x, 116, 15, 15, tile);
        LCD_Bitmap(x, 68, 15, 15, tile);
        LCD_Bitmap(x, 207, 15, 15, tile);
        LCD_Bitmap(x, 223, 15, 15, tile);
        x += 14;
    }

    LCD_Print("Boton 1: Leer Temp", 20, 100, 1, 0x001F, 0xCAB9);

    // Mensaje inicial en serial
    uint8_t msg_init[] = "\r\n=== STM32 Iniciado ===\r\nBoton 1 (UART): Solicitar Temperatura\r\nBoton 2 (SD): Guardar en SD\r\n";
    HAL_UART_Transmit(&huart2, msg_init, strlen((char*)msg_init), 1000);

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
    while (1) {
        // Lectura de botones con antirrebote
        uint32_t currentTime = HAL_GetTick();

        if (currentTime - lastButtonTime > BUTTON_DEBOUNCE) {
            // Boton 1: Solicitar temperatura al ESP32
            if (HAL_GPIO_ReadPin(butUART_GPIO_Port, butUART_Pin) == GPIO_PIN_RESET) {
                buttonPressed = 1;
                lastButtonTime = currentTime;
                HAL_Delay(50);
            }
            // Boton 2: Guardar en SD
            else if (HAL_GPIO_ReadPin(butSD_GPIO_Port, butSD_Pin) == GPIO_PIN_RESET) {
                buttonPressed = 2;
                lastButtonTime = currentTime;
                HAL_Delay(50);
            }
        }

        // Ejecutar función correspondiente al botón presionado
        if (buttonPressed == 1) {
            uint8_t msg[] = "\r\n[STM32] Boton 1 presionado - Solicitando datos...\r\n";
            HAL_UART_Transmit(&huart2, msg, strlen((char*)msg), 1000);

            infoSensor();  // Solicitar temperatura al ESP32

            buttonPressed = 0;  // Limpiar bandera
            HAL_Delay(500);  // Antirrebote
        }
        else if (buttonPressed == 2) {
            uint8_t msg[] = "\r\n[STM32] Boton 2 presionado - Guardando en SD...\r\n";
            HAL_UART_Transmit(&huart2, msg, strlen((char*)msg), 1000);

            guardarSD();  // Guardar temperatura en SD

            buttonPressed = 0;  // Limpiar bandera
            HAL_Delay(500);  // Antirrebote
        }

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
    }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_ON;
  RCC_OscInitStruct.PLL.PLLSource = RCC_PLLSOURCE_HSI;
  RCC_OscInitStruct.PLL.PLLM = 8;
  RCC_OscInitStruct.PLL.PLLN = 80;
  RCC_OscInitStruct.PLL.PLLP = RCC_PLLP_DIV2;
  RCC_OscInitStruct.PLL.PLLQ = 2;
  RCC_OscInitStruct.PLL.PLLR = 2;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_PLLCLK;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV2;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_2) != HAL_OK)
  {
    Error_Handler();
  }
}

